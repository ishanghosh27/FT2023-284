{% extends 'base.html.twig' %}
{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/style.css') }}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css"     integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}
{% block body %}
{% if error is defined %}
  <div class="alert alert-danger" role="alert">
    <div class="container">
      <strong>
        <p>{{ error	}}</p>
      </strong>
    </div>
  </div>
{% endif %}
{% if success is defined %}
  <div class="alert alert-success" role="alert">
    <div class="container">
      <strong>
        <p>{{ success	}}</p>
      </strong>
    </div>
  </div>
{% endif %}
<div class="login-logo text-center my-5 mx-auto">
    <a href="/">
      <i class="fa-brands fa-spotify fa-flip-vertical fa-3xl"></i>
    </a>
  </div>
  <div class="card signup-card my-5 text-white bg-dark">
	  <div class="card-body">
      <form class="row g-3 my-2 mx-auto" action="/reset" method="post" id="form">
        <div class="mx-auto col-10">
          <div class="col-md-12 my-3">
            <label for="inputPassword4" class="form-label">Password</label>
            <input type="password" class="form-control" id="inputPassword4" placeholder="Enter Your Password" name="pass">
            <input type="password" class="form-control my-2" id="inputPassword4" placeholder="Re-Enter Your Password" name="repass">
        </div>
        <div class="col-12 mt-4 text-center">
            <button type="submit" class="btn btn-light" name="submit">Change Password</button>
          </div>
      </form>
    </div>
  </div>
{% if success is defined %}
  <div class="col-12 my-3 text-center">
			<a href="/" class="link-light link-offset-2 link-underline link-underline-opacity-0">
				<button type="button" class="btn btn-light" name="forgot">
					Log In
				</button>
			</a>
		</div>
{% endif %}
{% endblock %}
