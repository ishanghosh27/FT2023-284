{% extends 'base.html.twig' %}
{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/style.css') }}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}
{% block javascripts %}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  <script src="{{ asset('js/script.js') }}"></script>
  <script src="{{ asset('js/uploadSong.js') }}"></script>
{% endblock %}
{% block body %}
  {% if uploads is defined %}
		<div class="alert alert-danger" role="alert">
      <div class="container">
        <strong>
          You Have Not Yet Uploaded Any Songs!
        </strong>
      </div>
    </div>
{% endif %}
  <div class="login-logo text-center mt-5 mb-3 mx-auto">
    <a href="/dashboard">
      <i class="fa-brands fa-spotify fa-flip-vertical fa-3xl"></i>
    </a>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card playlist-card my-5 text-white bg-dark">
          <div class="card-body">
            <div class="row">
              {% for song in songs %}
                <div class="col-3 my-3">
                  <a href="" class="fSong">
                    <div class="card">
                      <img class="card-img-top img-fluid" src="{{ asset('images/' ~ song.thumbnail) }}" alt="Artist image cap">
                      <div class="card-body">
                        <p class="card-text my-0">
                          <strong id="song-name">{{ song.title }}</strong>
                        </p>
                        <p class="card-text-sm text-end mb-0">{{ song.artist }}</p>
                      </div>
                    </div>
                  </a>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="player-container">
      <div class="row align-items-center">
        <div class="col-1 text-center px-0 py-0">
          <i class="fa-solid fa-xmark fa-2xl"></i>
        </div>
        <div class="col-3 text-start px-0 py-0">
          <div id="song-info">
            <img src="" alt="Song Cover">
            <div id="song-details">
              <span id="song-titled">
                <strong></strong>
              </span>
              <span id="artist"></span>
            </div>
          </div>
        </div>
        <div class="col-8">
          <div class="song-buttons">
            <input type="range" id="progress-bar" min="0" max="100" value="0">
            <div id="controls">
              <div id="play-button">
                <i class="fa-solid fa-play fa-2xl"></i>
              </div>
            </div>
          <audio id="audio-player" src=""></audio>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
